<template name="removeLeadsFromList" xmlns="http://ws.apache.org/ns/synapse">
    <!-- Required parameters -->
    <parameter name="listId" description="Id of the list."/>
    <parameter name="leadIds" description="Comma separated list of leads."/>
    <sequence>
        <property name="uri.var.listId" expression="$func:listId"/>
        <property name="uri.var.leadIds" expression="$func:leadIds"/>
        <script language="js">
            <![CDATA[
				var leadIds = mc.getProperty('uri.var.leadIds');

                var query="";
                var added=0;
                var ids=leadIds.split(',');
                for(var i = 0; i < ids.length; i++){
                    query+='id='+ids[i]+'&amp;';
                }

                mc.setProperty('uri.var.ids', query);
			]]>
        </script>
        <call>
            <endpoint>
                <http method="delete"
                      uri-template="{uri.var.apiUrl}/lists/{uri.var.listId}/leads.json?{uri.var.ids}"/>
            </endpoint>
        </call>
    </sequence>
</template>