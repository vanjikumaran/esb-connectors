<template name="getImportFailureFile" xmlns="http://ws.apache.org/ns/synapse">
    <!-- Required parameters -->
    <parameter name="batchId" description="Batch id returned from importLead call"/>
    <sequence>
        <property name="uri.var.batchId" expression="$func:batchId"/>
        <call>
            <endpoint>
                <http method="get"
                      uri-template="{uri.var.marketoInstanceURL}/bulk/v1/leads/batch/{uri.var.batchId}/failures.json"/>
            </endpoint>
        </call>
    </sequence>
</template>